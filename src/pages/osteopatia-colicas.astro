<script>
	// CTA Button functionality - wait for both DOM and component to be ready
	function initializeCTAButtons() {
		const ctaButtons = document.querySelectorAll('.cta-btn');
		
		if (ctaButtons.length > 0) {
			ctaButtons.forEach(btn => {
				btn.addEventListener('click', (e) => {
					e.preventDefault();
					
					// Enviar evento para Google Tag Manager
					if (typeof window !== 'undefined' && window.dataLayer) {
						window.dataLayer.push({
							'event': 'clique-botao-contato',
							'button_text': btn.textContent?.trim() || 'CTA Button',
							'button_location': window.location.pathname
						});
					}
					
					const modal = document.getElementById('lead-modal');
					if (modal) {
						modal.classList.remove('hidden');
						document.body.style.overflow = 'hidden';
					}
				});
			});
		} else {
			// Retry if buttons not found yet
			setTimeout(initializeCTAButtons, 100);
		}
	}

	// Start initialization when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initializeCTAButtons);
	} else {
		initializeCTAButtons();
	}
</script>

